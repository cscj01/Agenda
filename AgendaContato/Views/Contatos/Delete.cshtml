@model AgendaContato.Models.Contato

@{
    ViewBag.Title = "Exluir";
}

<h2>Exlusão de Contato</h2>

<h3>Você tem certeza que deseja exluir esse contato?</h3>
<div>
    <h4>Contato</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Sobrenome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Sobrenome)
        </dd>

        <dt>
            Telefone(s)
        </dt>

        <dd>
            @foreach (var telefone in Model.Telefones)
            {
                <p>
                    (@telefone.Ddd) @telefone.Numero - <b>@telefone.Tipo</b>
                </p>
            }
        </dd>

        <dt>
            E-mail(s)
        </dt>

        <dd>
            @foreach (var telefone in Model.Emails)
            {
                <p>
                    @telefone.EnderecoEmail - <b>@telefone.Tipo</b>
                </p>
            }
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Excluir" class="btn btn-default" /> |
            @Html.ActionLink("Voltar para a lista", "Index")
        </div>
    }
</div>
