@model AgendaContato.Models.Contato

@{
    ViewBag.Title = "Detalhes";
}

<h2>Detalhes do Contato</h2>

<div>
    <h4>Contato</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Sobrenome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Sobrenome)
        </dd>

        <dt>
            Telefone(s)
        </dt>

        <dd>
            @foreach (var telefone in Model.Telefones)
            {
                <p>
                    (@telefone.Ddd) @telefone.Numero - <b>@telefone.Tipo</b>
                </p>
            }
        </dd>

        <dt>
            E-mail(s)
        </dt>

        <dd>
            @foreach (var telefone in Model.Emails)
            {
                <p>
                    @telefone.EnderecoEmail - <b>@telefone.Tipo</b>
                </p>
            }
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Voltar para a Lista", "Index")
</p>
